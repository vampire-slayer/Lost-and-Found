<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        tools:context="com.vishalsah.lostandfound.FoundActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/use4">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next >>"
            android:id="@+id/button9"
            android:layout_below="@+id/editText18"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />

        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datePicker3"
            android:layout_below="@+id/textView16"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText15"
            android:hint="Item Name"
            android:layout_below="@+id/textView17"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/textView14"
            android:background="#afecc1a9" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText16"
            android:layout_below="@+id/spinner3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:hint="Brand"
            android:background="#afecc1a9" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText17"
            android:hint="Location Lost"
            android:layout_below="@+id/datePicker3"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_alignEnd="@+id/datePicker3"
            android:background="#afecc1a9" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText18"
            android:layout_below="@+id/editText17"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_alignEnd="@+id/datePicker3"
            android:hint="Description"
            android:background="#afecc1a9" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner3"
            android:entries="@array/category"
            android:layout_alignBottom="@+id/textView14"
            android:layout_below="@+id/editText15"
            android:layout_marginTop="10dp"
            android:layout_alignEnd="@+id/textView14"
            android:layout_alignStart="@+id/button9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Category :"
            android:id="@+id/textView14"
            android:layout_below="@+id/editText15"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:textColor="#437142" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Date Lost :"
            android:id="@+id/textView15"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_below="@+id/editText16"
            android:layout_alignParentStart="true"
            android:textColor="#437142" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textView16"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_below="@+id/editText16"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Report Lost Item"
            android:id="@+id/textView17"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/textView14"
            android:background="#b2f1a8a8"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />
    </RelativeLayout>
</ScrollView>
